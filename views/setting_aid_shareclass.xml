<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <act_window id="setting_aid_shareclass"
                name="共用分錄類別維護"
                res_model="setting.aid.shareclass"
                view_mode="tree,form"/>
    <record id="setting_aid_shareclass_form" model="ir.ui.view">
        <field name="name">關聯科目設定</field>
        <field name="model">setting.aid.shareclass</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <h1>共用分錄類別維護</h1>
                    <group col="4">
                        <group colspan="4" col="4">
                            <field name="classnum"/>
                            <field name="entclass"/>
                            <field name="debtrassub"/>
                            <field name="debabcls"/>
                        </group>
                        <group colspan="4" col="2">
                            <field name="debabcont"/>
                        </group>
                        <group colspan="4" col="4">
                            <field name="credtrassub"/>
                            <field name="credabcls"/>
                        </group>
                        <group colspan="4" col="2">
                            <field name="credabcont"/>
                        </group>
                        <group colspan="4" col="4">
                            <field name="taxamsub"/>
                            <field name="taxamabcls"/>
                        </group>
                        <group colspan="4" col="2">
                            <field name="taxamabcont"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="setting_aid_shareclass_tree" model="ir.ui.view">
        <field name="name">關聯科目設定</field>
        <field name="model">setting.aid.shareclass</field>
        <field name="arch" type="xml">
            <tree>
                <field name="classnum"/>
                <field name="entclass"/>
            </tree>
        </field>
    </record>
</openerp>