<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="setting_aid_system" model="ir.actions.act_window">
            <field name="name">用戶系統設定</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">setting.aid.system</field>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
        </record>
        <record id="setting_aid_system_form" model="ir.ui.view">
            <field name="name">setting_aid_system_form</field>
            <field name="model">setting.aid.system</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button string="Apply" type="object" name="execute" class="oe_highlight"/>
                        <button string="Cancel" type="object" name="cancel" class="oe_link"/>
                    </header>
                    <sheet>
                        <h1>用戶系統設定</h1>
                        <group col="4">
                            <field name="summons"/>
                            <field name="summonsname"/>
                            <field name="buysell"/>
                            <field name="buysellname"/>
                            <field name="consumables"/>
                            <field name="consumablesname"/>
                            <field name="openaccount"/>
                            <field name="openaccountname"/>
                        </group>
                        <group col="6">
                            <field name="classinform"/>
                            <field name="address"/>
                            <field name="aummonsasbuysell"/>
                            <field name="yearinform"/>
                            <field name="defaultaddress" colspan="4"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</openerp>