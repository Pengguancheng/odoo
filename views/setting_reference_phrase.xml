<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="setting_reference_phrase" model="ir.actions.act_window">
            <field name="name">片語維護</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">setting.reference.phrase</field>
            <field name="view_mode">tree,form</field>
        </record>
        <record id="setting_reference_phrase_tree" model="ir.ui.view">
            <field name="name">片語維護</field>
            <field name="model">setting.reference.phrase</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="phrasecode"/>
                    <field name="phrasename"/>
                </tree>
            </field>
        </record>
        <record id="setting_reference_phrase_form" model="ir.ui.view">
            <field name="name">setting_reference_phrase_form</field>
            <field name="model">setting.reference.phrase</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <h1>片語維護</h1>
                        <group col="8">
                            <group colspan="8" col="2">
                                <field name="phrasecode"/>
                                <field name="phrasename"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</openerp>